{
    "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "y-ui": ["components/index.ts"],
        "y-ui/esm/*": ["components/*"],
        "y-ui/lib/*": ["components/*"]
      },
      "target": "esnext",
      "module": "commonjs",
      "jsx": "react",
      "declaration": true,
      "declarationDir": "lib", // 类型定义目录生成的地方
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["components", "global.d.ts", "./.eslintrc.js"],
    "exclude": ["node_modules"]
  }
